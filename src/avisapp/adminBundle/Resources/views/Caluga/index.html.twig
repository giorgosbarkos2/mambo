{% extends "avisappadminBundle:Layers:basePrincipal.html.twig" %}
{% block title%} Listar Paso a Paso. {% endblock%}
{% block padre %}<a href="{{path('admin_caluga_new')}}">Crear Paso a Paso.</a>{% endblock %}
{% block hijo %} Listar Paso a Paso. {%endblock%}
{% block titulo %} Listar Paso a Paso. {%endblock %}
{% block contenido %}
    <table class="records_list">
        <thead>
            <tr>
                <th>Título</th>
                <th>Descripción</th>
                <th>Eliminar</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>
                    <form action="{{ path('admin_caluga_delete', { 'id': entity.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(deleteForms[entity.id]) }}
                    </form>
                </td>
                <td><a href="{{ path('admin_caluga_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a></td>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
