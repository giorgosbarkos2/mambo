{% extends "avisappadminBundle:Layers:basePrincipal.html.twig" %}
{% block title%} Listar Slider {% endblock%}
{% block padre %}<a href="{{path('admin_slider_new')}}">Crear Slider</a>{% endblock %}
{% block hijo %} Listar Slider {%endblock%}
{% block titulo %} Listar Slider {%endblock %}
{% block contenido %}
    <table class="records_list">
        <thead>
            <tr>
            
                <th>Texto</th>
                <th>Ver</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.texto }}</td>
                <td><a href="{{ path('admin_slider_show', { 'id': entity.id }) }}" class="btn btn-success">Ver</a></td>
                <td><a href="{{ path('admin_slider_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
