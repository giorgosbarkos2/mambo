{% extends "avisappadminBundle:Layers:basePrincipal.html.twig" %}
{% block title%} Crear Título Botón {% endblock%}
{% block padre %}<a href="{{path('admin_botonhome')}}">Listar Título Botón</a>{% endblock %}
{% block hijo %} Crear Título Botón {%endblock%}
{% block titulo %} Crear Título Botón {%endblock %}
{% block contenido %}
<div class="horizontal-form" rol="form">
    {{ form_start(form) }}
     <div class="form-group">
        {{ form_label(form.texto, 'Texto (Máximo 15 caracteres con espacios)', {'label_attr': {'class' :' col-sm-2 control-label'} }) }}
        <div class="col-sm-10">
            {{ form_widget(form.texto, {'attr' : { 'class' : 'form-control'}})}}
        </div>
        </div>
        <br />
        <br />        
        <div class="form-group">
            {{form_label(form.url, 'Ingrese url del Botón:', {'label_attr': {'class': 'col-sm-2 control-label'}} ) }}
            <div class="col-sm-10">
                {{form_widget(form.url, {'attr': {'class' : 'form-control'}})}}
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
             {{form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}})}} 
        </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
